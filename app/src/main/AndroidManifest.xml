<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g.pb.chatify">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Chatify"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/mytheme">
        <activity android:name=".new_call"></activity>
        <activity android:name=".group_chat_room" />
        <activity android:name=".new_group" />
        <activity android:name=".receiver_profile" />
        <activity
            android:name=".chatroom"
            android:screenOrientation="portrait"
            android:theme="@style/mytheme" />
        <activity
            android:name=".Activity_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".verification"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/mytheme" />
    </application>

</manifest>